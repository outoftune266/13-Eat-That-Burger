<div class="container">
  <div class="row">
    <div class="col-lg">
      <h1>Eat That Burger!!!</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg">
      <div id="icons">
        <i class="fas fa-hamburger"></i>
        <i class="fas fa-hamburger"></i>
        <i class="fas fa-hamburger"></i>
        <i class="fas fa-hamburger"></i>
        <i class="fas fa-hamburger"></i>
      </div>
    </div>
  </div>

  <div class="row main">
    <div class="col-md">
      <h2>Delicious burgers waiting to be eaten...</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block deboured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md">
      <h2>Burgers that have been devoured...</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row main">
    <div class="col-md">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
          <button type="submit">Add Burger</button>
        </div>

        
      </form>
    </div>

    <div class="col-md">
      <div id="video">
        <h2>Watch me eat some burgers!</h2>
        <iframe width="560" height="315" src="https://www.youtube.com/embed/DXm8yXjwXG4" frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen></iframe>
      </div>
    </div>
  </div>

  <footer class="row">
    <div class="col-lg">
      <p>Designed and built by Zak Monnet</p>
      <p>&#169 Zak Monnet, 2020</p>
    </div>
  </footer>

</div>


